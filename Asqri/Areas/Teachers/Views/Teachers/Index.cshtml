@model Asqri.ViewModels.TeacherViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">لیست معلمان</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">


        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>شماره</th>
                    <th>تصویر</th>
                    <th>نام و نام خانوادگی </th>
                    <th>نام کاریر</th>
                    <th>شماره موبایل </th>
                    <th>مهارت </th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Teachers)
                {
                    if (item.Enabled == true)
                    {
                        <tr style="background:#bff7a7">
                            <td>@item.Id</td>
                            <td> <img src="~/File/UploadImages/@item.Image" style="width:80px;height:80px" /></td>
                            <td>
                                @item.Fname @item.Lname
                            </td>
                            <td>@item.Username</td>
                            <td>

                                @item.Mobile
                            <td>
                            <td>

                                @item.Mobile
                            <td>
                            <td>

                                @item.Intresting
                            <td>
                                @Html.ActionLink("مشخصات", "Detils", new { id = item.Id }) |
                                @Html.ActionLink("حذف", "DeleteNews", new { id = item.Id }, new { onclick = "return confirm('جهت حذف مطمئن هستید ؟')" })
                            </td>
                        </tr>
                    }
                    else {
                        <tr >
                            <td>@item.Id</td>
                            <td> <img src="~/File/UploadImages/@item.Image" style="width:80px;height:80px" /></td>
                            <td>
                                @item.Fname @item.Lname
                            </td>
                            <td>@item.Username</td>
                            <td>

                                @item.Mobile
                            <td>
                            <td>

                                @item.Mobile
                            <td>
                            <td>

                                @item.Intresting
                            <td>
                                @Html.ActionLink("مشخصات", "Detils", new { id = item.Id }) |
                                @Html.ActionLink("حذف", "DeleteNews", new { id = item.Id }, new { onclick = "return confirm('جهت حذف مطمئن هستید ؟')" })
                            </td>
                        </tr>
                    }
                }


            </tbody>
            <tfoot>
                <tr>
                    <th>شماره</th>
                    <th>تصویر</th>
                    <th>نام و نام خانوادگی </th>
                    <th>نام کاریر</th>
                    <th>شماره موبایل </th>
                    <th>عملیات</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.box-body -->
</div>


