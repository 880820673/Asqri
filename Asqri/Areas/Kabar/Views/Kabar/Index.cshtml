@model Asqri.ViewModels.NewsViewModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">نمایش اخبار</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">

        @Html.ActionLink("افزودن اسلاید شو", "AddNews", "Kabar", null, new { @class = "button" })
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>شماره</th>
                    <th>تصویر</th>
                    <th>توضیحات</th>
                    <th>کلمات کلیدی</th>
                    <th>تاریخ ثبت خبر</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.News)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td> <img src="~/File/UploadImages/@item.Image" style="width:80px;height:80px" /></td>
                        <td>
                            @item.Title
                        </td>
                        <td>@item.Keywords</td>
                        <td>

                            @item.times
                        <td>
                            @Html.ActionLink("ویرایش", "EditNews", new { id = item.Id }) |
                        @Html.ActionLink("حذف", "DeleteNews", new { id = item.Id }, new { onclick = "return confirm('جهت حذف مطمئن هستید ؟')" })
                    </td>
                </tr>
                }


            </tbody>
            <tfoot>
                <tr>
                    <th>شماره</th>
                    <th>تصویر</th>
                    <th>توضیحات</th>
                    <th>کلمات کلیدی</th>
                    <th>تاریخ ثبت خبر</th>
                    <th>عملیات</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.box-body -->
</div>


